{
  "_readme": [
    "npm ls source-map-supoort you will find:",
    "babel-register is added via babel-cli",
    "source-map-support is added via babel-register",
    "nodemon --exec babel-node : you need to install babel-cli either locally or globally to make it work"
  ],
  "private": true,
  "scripts": {
    "start":"node heroku/index.js",
    "start-local": "npm-run-all --parallel start-server   start-client",
    "build": "npm run clean &&relay-compiler --src ./js/ --schema ./server/data/schema.graphql  --extensions js jsx tsx",
    "debug-build": "node --debug-brk --inspect ./node_modules/relay-compiler/bin/relay-compiler --src ./js/ --schema ./data/schema.graphql --extensions js jsx tsx --watch",
    "clean": "find . -name __generated__ -print | xargs rm -rf",
    "start-server": "nodemon ./server/index.js  --exec babel-node",
    "start-server-v2": "nodemon ./server.js  --exec babel-node  --watch data --ignore  data/schema.json --ignore data/schema.graphql",
    "debug-server": "babel-node ./server.js --source-maps --debug-brk --inspect",
    "debug-server-v2": "node  ./node_modules/babel-cli/bin/babel-node.js  ./server.js --debug-brk --inspect",
    "prestart-client": "npm run build",
    "start-client": "webpack-dev-server --port 8001 --inline --content-base ./public ",
    "update-schema": "babel-node ./script/updateSchema.js",
    "test": "mocha --compilers js:babel-register --recursive \"component/**/*.spec.js\" --require test/setup.js",
    "debug-mocha": "mocha --compilers js:babel-register  --recursive \"js/**/*.spec.js\" --require test/setup.js --debug-brk --inspect",
    "lint": "eslint ./js",
    "predeploy":"rm -rf heroku &find public -name '*.js' -or -name '*.map' | xargs rm -rf ",
    "deploy": "set NODE_ENV=production &npm run build-server&webpack --progress --verbose --colors --display-error-details",
    "postdeploy":"cp -r public heroku/public",
    "build-server": "babel server --out-dir heroku --source-maps --copy-files"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-runtime": "^6.11.6",
    "body-parser": "^1.17.2",
    "eventemitter2": "^4.1.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.4",
    "graphql": "^0.11.7",
    "graphql-relay": "^0.5.1",
    "graphql-relay-subscription": "^0.1.3",
    "socket.io": "^2.0.3",
    "casual": "^1.5.17"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-relay": "^1.0.1-a",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "casual": "^1.5.17",
    "classnames": "2.2.5",
    "eslint": "3.19.0",
    "eslint-config-fbjs": "1.1.1",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-flowtype": "2.15.0",
    "eslint-plugin-react": "5.2.2",
    "expect": "^1.20.2",
    "flow-bin": "^0.57.3",
    "jsdom": "^11.0.0",
    "mocha": "^3.4.2",
    "prop-types": "^15.6",
    "react": "^16",
    "react-dom": "^16",
    "react-relay": "^1.4.1",
    "relay-compiler": "^1.0.0-a",
    "socket.io-client": "^2.0.3",
    "todomvc-app-css": "^2.1.0",
    "webpack": "1.13.2",
    "webpack-dev-server": "^1.16.1",
    "whatwg-fetch": "2.0.3"
  }
}
