{
  "name": "relay-todo-modern",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel start-server   start-client",
    "update-schema": "node server/scripts/updateSchema.js",
    "clean-client": "rm -rf client/graphql/schema.graphql &&find . -name __generated__ | xargs rm -rf",
    "download-schema": "node client/graphql/download-schema.js",
    "compile-client": "npm run clean-client && npm run download-schema&& relay-compiler --src ./client --schema ./client/graphql/schema.graphql  --extensions js jsx tsx",
    "debug-compile": "node --debug-brk --inspect ./node_modules/relay-compiler/bin/relay-compiler  --schema ./client/graphql/schema.graphql --extensions js jsx tsx",
    "compile-client:watch": "npm run compile-client -- --watch",
    "build-client": "npm run compile-client&&NODE_ENV=production webpack --config=client/webpack.config  --verbose --colors --display-error-details",
    "start-client": "npm run compile-client&& webpack-dev-server --config=client/webpack.config",
    "start-server": "nodemon ./server/index.js",
    "start-server-v2": "nodemon ./server.js --watch data --ignore  data/schema.json --ignore data/schema.graphql",
    "debug-server": "node --inspect-brk ./server/index.js",
    "test": "mocha --compilers js:babel-register --recursive \"component/**/*.spec.js\" --require test/setup.js",
    "debug-mocha": "mocha --compilers js:babel-register  --recursive \"js/**/*.spec.js\" --require test/setup.js --debug-brk --inspect",
    "lint": "eslint client server",
    "flow": "flow check",
    "start-heroku": "node server/index.js",
    "heroku-prebuild": "echo ************ this is run before npm install *******&& npm run heroku-download-file",
    "heroku-download-file": "wget -q  http://52.243.82.117:8000/server/data/redis.js -P server/data/",
    "heroku-compile": "npm run clean-client&& relay-compiler --src ./client --schema ./server/data/schema.graphql  --extensions js jsx tsx",
    "heroku-postbuild": "npm run heroku-compile&& NODE_ENV=production webpack --config=client/webpack.config"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-runtime": "^6.11.6",
    "bluebird": "^3.5.1",
    "body-parser": "^1.17.2",
    "casual": "^1.5.17",
    "chalk": "^2.4.1",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "graphql-relay": "^0.5.5",
    "graphql-relay-subscription": "^0.1.3",
    "p-map": "^1.2.0",
    "p-waterfall": "^1.0.0",
    "redis": "^2.8.0",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.4",
    "babel-plugin-relay": "^1.6.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "casual": "^1.5.17",
    "classnames": "2.2.5",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "eslint": "^4.9.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "expect": "^1.20.2",
    "file-loader": "^1.1.11",
    "flow-bin": "^0.76.0",
    "jsdom": "^11.0.0",
    "mocha": "^3.4.2",
    "node-fetch": "^2.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "prop-types": "^15.6",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-relay": "^1.6.0",
    "relay-compiler": "^1.6.0",
    "relay-runtime": "^1.6.0",
    "socket.io-client": "^2.0.3",
    "style-loader": "^0.21.0",
    "todomvc-app-css": "^2.1.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.4",
    "whatwg-fetch": "^2.0.4"
  }
}
