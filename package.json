{
  "private": true,
  "scripts": {
    "start":"node azure/index.js", 
    "local": "npm-run-all --parallel start-server   start-client",
    "build": "relay-compiler --src ./js/ --schema ./data/schema.graphql  --extensions js jsx tsx",
    "debug-build": "node --debug-brk --inspect ./node_modules/relay-compiler/bin/relay-compiler --src ./js/ --schema ./data/schema.graphql  --extensions js jsx tsx --watch",
    "clean":"find . -name __generated__ -print | xargs rm -rf",
    "start-server": "nodemon ./server.js  --exec babel-node",
    "start-server-v2": "nodemon ./server.js  --exec babel-node  --watch data --ignore  data/schema.json --ignore data/schema.graphql",
    "debug-server": "babel-node ./server.js --source-maps --debug-brk --inspect",
    "debug-server-v2": "node  ./node_modules/babel-cli/bin/babel-node.js  ./server.js --debug-brk --inspect",
    "start-client": "webpack-dev-server --port 8001 --inline --content-base ./public ",
    "prestart-client":"npm run clean & npm run build",
    "update-schema": "babel-node ./script/updateSchema.js",
    "test": "mocha --compilers js:babel-register --recursive \"component/**/*.spec.js\" --require test/setup.js",
    "debug-mocha": "mocha --compilers js:babel-register --source-maps  --recursive \"component/**/*.spec.js\" --require test/setup.js --debug-brk --inspect",
    "lint": "eslint ./js",
    "webpack":"webpack --config webpack.azure.config.js  --progress --verbose --colors --display-error-details"
  },
  "dependencies": {
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-relay": "^1.0.1-a",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.11.6",
    "classnames": "2.2.5",
    "express": "^4.15.2",
    "express-graphql": "^0.6.4",
    "graphql": "^0.9.1",
    "graphql-relay": "^0.5.1",
    "prop-types": "^15.5.8",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-relay": "^1.0.0-a",
    "todomvc-app-css": "^2.1.0",
    "webpack": "1.13.2",
    "webpack-dev-server": "^1.16.1",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "6.1.2",
    "eslint": "3.19.0",
    "eslint-config-fbjs": "1.1.1",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-flowtype": "2.15.0",
    "eslint-plugin-react": "5.2.2",
    "flow-bin": "^0.46.0",
    "mocha": "^3.4.2",
    "relay-compiler": "^1.0.0-a"
  }
}
